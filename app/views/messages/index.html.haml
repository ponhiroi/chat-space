.notification
.wrapper
  .side-bar
    .side-bar__header
      %h3 ユーザー名
      %ul.header__lists
        %li.list
          %i.fa.fa-cog.icon.fa-fw
        %li.list
          %i.far.fa-edit.fa-fw
    .groups
      = render partial: "groups"
  .chat
    .chat-header
      %ul.left-header
        %li.left-header__title サンプルグループ①
        %li.left-header__members Member : ユーザー名
      %ul.right-header
        %li.right-header__button Edit
    .messages.js-messages
      = render partial: "messages"
    .form
      %input#message_content.form__message.js-content{:name => "message[content]", :placeholder => "type a message", :type => "text"}/
      .form__mask
        %i.far.fa-image
      %input.form__submit{"data-disable-with" => "Send", :name => "commit", :type => "submit", :value => "Send"}/


